<section class="page-hero small">
  <div class="container">
    <h1>Contact Us</h1>
    <p>We are here to help</p>
  </div>
</section>
<section class="content">
  <div class="container grid two">
    <div>
      <h2>Store Location</h2>
      <div class="map">
        <iframe
          src="https://www.google.com/maps?q=Shop%20No%203,%20Near%20Shani%20Mandir,%20Peth%20Road,%20Nashik-03,%20Maharashtra&output=embed"
          width="100%" height="300" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
      </div>
      <p><strong>Address:</strong> <%= company.address %></p>
      <p><strong>Phone:</strong> <a href="tel:<%= company.phones[0] %>"><%= company.phones[0] %></a>, <a href="tel:<%= company.phones[1] %>"><%= company.phones[1] %></a></p>
      <p><a class="btn whatsapp" href="https://wa.me/<%= res.locals.whatsappNumber %>" target="_blank" rel="noopener">Chat on WhatsApp</a></p>
    </div>
    <div>
      <h2>Send a Message</h2>
      <form method="post" action="/contact">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <div class="form-group">
          <label>Name</label>
          <input type="text" name="name" required>
        </div>
        <div class="form-group">
          <label>Phone</label>
          <input type="text" name="phone" required>
        </div>
        <div class="form-group">
          <label>Message</label>
          <textarea name="message" rows="5" required></textarea>
        </div>
        <button class="btn primary" type="submit">Send</button>
      </form>
    </div>
  </div>
</section>