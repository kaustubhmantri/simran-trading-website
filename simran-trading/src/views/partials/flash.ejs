<% if (flash.error && flash.error.length) { %>
  <div class="alert error"><%= flash.error.join('. ') %></div>
<% } %>
<% if (flash.success && flash.success.length) { %>
  <div class="alert success"><%= flash.success.join('. ') %></div>
<% } %>
<% if (flash.info && flash.info.length) { %>
  <div class="alert info"><%= flash.info.join('. ') %></div>
<% } %>