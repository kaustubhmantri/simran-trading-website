<section class="content">
  <div class="container">
    <div class="flex between">
      <h1>Categories</h1>
      <a class="btn primary" href="/admin/categories/new">New Category</a>
    </div>
    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name (EN)</th>
          <th>Name (MR)</th>
          <th>Slug</th>
          <th>Order</th>
          <th>Active</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% categories.forEach(c => { %>
          <tr>
            <td><%= c.id %></td>
            <td><%= c.name_en %></td>
            <td><%= c.name_mr || '-' %></td>
            <td><%= c.slug %></td>
            <td><%= c.display_order %></td>
            <td><%= c.is_active ? 'Yes' : 'No' %></td>
            <td>
              <a class="btn" href="/admin/categories/<%= c.id %>/edit">Edit</a>
              <form method="post" action="/admin/categories/<%= c.id %>/delete" style="display:inline">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button class="btn outline" type="submit" onclick="return confirm('Delete category?')">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</section>